{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<div class="container">

    <div class="row">
        {% for dossier in dossiers%}
            <div class="col-1">
                <a href="{{ path('dossier_show', {'id': dossier.id}) }}">
                    <div class="col-1">
                        <span class="fas fa-fw fa-folder" style="font-size:40px;color:royalblue;"></span>
                    </div>
                    <div class="col-1">
                        <span>{{ dossier }}</span>
                    </div>
                </a>
                <div class="col-10">
                    <form method="post" action="{{ path('dossier_delete', {'id': dossier.id}) }}"
                          onsubmit="return confirm('Are you sure you want to delete this item?');" style="width: 20px">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ dossier.id) }}">
                        <button type="submit" class="btn fas fa-fw fa-trash-alt" style="font-size:20px;color:red;"></button>
                    </form>
                    <span class="fas fa-fw fa-edit" style="font-size:20px;color:royalblue;"></span>
                </div>
            </div>
                {% else %}
                <p>
                    Vous n'avez aucun dossier
                </p>
        {% endfor %}
    </div>
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Libelle</th>
            <th>Date</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for dossier in dossiers %}
            <tr>
                <td>
                    <a href="{{ path('dossier_show', {'id': dossier.id}) }}">

                            <span class="fas fa-fw fa-folder" style="font-size:40px;color:royalblue;"></span>
                           {{ dossier }}
                    </a>
                </td>
                <td>{{ dossier.libelle }}</td>
{#                <td>{{ dossier.date ? fichier.date|date('Y-m-d') : '' }}</td>#}
                <td>
                    <a href="{{ path('dossier_show', {'id': dossier.id}) }}">show</a>
                    <a href="{{ path('dossier_show', {'id': dossier.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Votre repertoire es vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
