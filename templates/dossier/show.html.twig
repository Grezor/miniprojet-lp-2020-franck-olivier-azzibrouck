{% extends 'base.html.twig' %}

{% block title %}Dossier{% endblock %}

{% block body %}

    <div class="container">
        <h1 align="center">{{ dossier.libelle }}
            <span class="fas fa-fw fa-folder-open" style="font-size:20px;color:royalblue;"></span><br>

        </h1>
        <a  href="#" data-toggle="modal" data-target="#dossierModal" style="color: navajowhite">
            <i class="fa fa-folder-plus" style="font-size:30px;color:aliceblue;"></i>
            nouveau
        </a>
        <a href="#" data-toggle="modal" data-target="#fichierModal" style="color: navajowhite">
            <i class="fa fa-file-medical" style="font-size:30px;color:navajowhite;"></i>
            nouveau
        </a>
        <br>
        <div class="row">
            {% for sousdossier in dossiers%}
                <div class="col-1">
                    <a href="{{ path('dossier_show', {'id': sousdossier.id}) }}">

                        <div class="col-1">
                            <span class="fas fa-fw fa-folder" style="font-size:40px;color:royalblue;"></span>
                        </div>
                        <div class="col-1">
                            <span>{{ sousdossier }}</span>
                        </div>
                    </a>
                    <div class="col-10">
                        <form method="post" action="{{ path('dossier_delete', {'id': sousdossier.id}) }}"
                              onsubmit="return confirm('Are you sure you want to delete this item?');" style="width: 20px">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sousdossier.id) }}">
                            <button type="submit" class="btn fas fa-fw fa-trash-alt" style="font-size:20px;color:red;"></button>
                        </form>
                        <span class="fas fa-fw fa-edit" style="font-size:20px;color:royalblue;"></span>
                    </div>
                </div>
            {% else %}
                <p>
                    Vous n'avez aucun dossier
                </p>
            {% endfor %}
        </div>
    </div>
    <!-- Ajout dossier-->
    <div class="modal fade" id="dossierModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ajouter un dossier</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{ render(path('dossier_new')) }}
                </div>
            </div>
        </div>
    </div>
    <!-- ajout fichier-->
    <div class="modal fade" id="fichierModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ajouter un fichier</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{ render(path('fichier_new')) }}
                </div>

            </div>
        </div>
    </div>
{% endblock %}
