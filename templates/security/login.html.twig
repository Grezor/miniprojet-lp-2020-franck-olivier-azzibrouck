{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Bienvenue</h1>
                                        <h1 class="h5 text-gray-900 mb-5"> sur le service de stockage!</h1>
                                    </div>
                                    <form class="user" method="post">
                                        {% if app.user %}
                                            <div class="mb-3">
                                               Vous êtes déja connecté {{ app.user.nom }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                                            </div>
                                        {% endif %}
                                        {% if error %}
                                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                        {% endif %}

                                        <div class="form-group">
                                            <input type="email" class="form-control form-control-user"
                                                   id="exampleInputEmail" aria-describedby="emailHelp"
                                                   placeholder="azerty@qwerty.com..." name="email" value="{{ last_username }}">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user"
                                                   id="exampleInputPassword" placeholder="mot de passe" name="password">
                                            <input type="hidden" name="_csrf_token"
                                                   value="{{ csrf_token('authenticate') }}"
                                            >
                                        </div>
{#                                        <div class="form-group">#}
{#                                            <div class="custom-control custom-checkbox small">#}
{#                                                <input type="checkbox" class="custom-control-input" id="customCheck">#}
{#                                                <label class="custom-control-label" for="customCheck">Remember#}
{#                                                    Me</label>#}
{#                                            </div>#}
{#                                        </div>#}
                                        <a href="index.html" class="btn btn-primary btn-user btn-block">
                                            Login
                                        </a>
                                        <hr>

                                    </form>
                                    <hr>

                                    <div class="text-center">
                                        <a class="small" href="{{ path('app_register') }}">Inscription!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    </body>
{% endblock %}
