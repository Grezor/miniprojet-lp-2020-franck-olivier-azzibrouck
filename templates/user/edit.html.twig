{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <div class="container">
        <h1 align="center">Modifier le profile</h1>
        <div class="form-group">
            {{ form_widget(form) }}
        </div>
        <div class="form-group">
            <button class="btn btn-success"  align="center">Modifier</button>
            {{ form_end(form) }}
            <form method="post" action="{{ path('user_delete', {'id': app.user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <input type="hidden" name="_method" value="DELETE">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                <button class="btn btn-danger">Delete</button>
            </form>
        </div>

    </div>

{% endblock %}
