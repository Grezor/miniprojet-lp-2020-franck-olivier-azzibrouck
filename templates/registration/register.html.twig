{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Créer votre compte!</h1>
                            </div>
                            {% if app.user %}
                                <div class="mb-3 text-center">
                                    Vous êtes déja connecté {{ app.user.nom }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                                </div>
                            {% endif %}
                            {{ form_start(registrationForm) }}
                            <form class="user">
                                <div class="form-group">
                                   {{ form_row(registrationForm.nom) }}
                                   {{ form_row(registrationForm.prenom) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(registrationForm.email) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(registrationForm.formule) }}
                                </div>
                                <div class="form-group">
                                    <p class="h3" align="center">{{ captcha }}</p>
                                    <p class="h3" align="center" style="color: red">{{ error }}</p>
                                    {{ form_row(registrationForm.captcha,
                                        {'attr': {'placeholder': 'saisir le captcha :'

                                           }}) }}
                                </div>
                                <div class="form-group">
                                            {{ form_row(registrationForm.plainPassword.first) }}
                                    <div id="exampleRepeatPassword">
                                            {{ form_row(registrationForm.plainPassword.second) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                        {{ form_row(registrationForm.agreeTerms) }}
                                </div>
                                <a href="login.html" class="btn btn-primary btn-user btn-block">
                                    Register Account
                                </a>
                                <hr>
                            </form>
                            {{ form_end(registrationForm) }}
                            <div class="text-center">
                                <a class="small" href="{{ path('app_login') }}">Déjà un compte, connectez vous ici!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

    </body>
{% endblock %}
